<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles based on Bolt design system -->
    
    <!-- Headings -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Body text -->
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Labels and captions -->
    <style name="TextAppearance.App.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Card styles -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.App.Card.Meal">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/border</item>
    </style>
    
    <style name="Widget.App.Card.Recipe">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Checkbox and selection styles -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/primary</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
    
    <!-- Input styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- Bolt-specific component styles -->
    
    <style name="Widget.MealPlanner.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_on</item>
        <item name="trackTint">@color/switch_track_on</item>
    </style>
    
    <style name="Widget.MealPlanner.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/primary</item>
    </style>
    
    <style name="Widget.MealPlanner.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>
    
    <!-- Tab styles for Bolt-like tab layout -->
    <style name="Widget.MealPlanner.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabRippleColor">@color/primary_light</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>
    
    <!-- Style for filter tabs (pill-shaped) -->
    <style name="Widget.MealPlanner.FilterTab" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="Widget.MealPlanner.FilterTab.Selected">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Bottom navigation style -->
    <style name="Widget.MealPlanner.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Progress bar style for shopping progress -->
    <style name="Widget.MealPlanner.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/primary_light</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">6dp</item>
    </style>
    <!-- Floating Action Button Style -->
    <style name="Widget.MealPlanner.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/white</item>
        <item name="maxImageSize">24dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/ripple_material_light</item>
        <item name="elevation">6dp</item>
    </style>
</resources>

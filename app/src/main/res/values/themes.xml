<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MealPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar styling -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
        
        <!-- Widget styles -->
        <item name="materialCardViewStyle">@style/Widget.MealPlanner.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MealPlanner.Button</item>
        <item name="chipStyle">@style/Widget.MealPlanner.Chip</item>
    </style>
    
    <style name="Theme.MealPlanner" parent="Base.Theme.MealPlanner" />
    
    <!-- Custom widget styles -->
    <style name="Widget.MealPlanner.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.MealPlanner.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.MealPlanner.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardView.MealPlanner.Meal" parent="Widget.MealPlanner.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="CardView.MealPlanner.Recipe" parent="Widget.MealPlanner.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.MealPlanner.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.MealPlanner.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.MealPlanner.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.MealPlanner.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Using styles from styles.xml -->
</resources>